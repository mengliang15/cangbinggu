<script>
    function checkPassword() {
        const pwd = prompt("请输入密码查看照片：", "");
        if (pwd === '54188') {
            const photo = localStorage.getItem('capturedPhoto');
            if (photo) {
                const win = window.open();
                win.document.write(`<img src="${photo}" style="max-width:100%;max-height:100%;">`);
            } else {
                alert("没有找到照片");
            }
        } else {
            alert("密码错误");
        }
    }
</script>
